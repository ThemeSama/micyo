  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "author": "themesama",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ThemeSama/micyo/issues"
  },
  "homepage": "https://github.com/ThemeSama/micyo#readme",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-hook-form": "^7.51.4"
  },
  "devDependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@types/styled-components": "^5.1.34",
    "react-hook-form": "^7.51.4",
    "styled-components": "^6.1.11",
    "yup": "^1.4.0",
    "zod": "^3.23.8"
  }
