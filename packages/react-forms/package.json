        "types": "./dist/modern/index.d.cts",
        "default": "./dist/modern/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThemeSama/micyo.git",
    "directory": "packages/react-forms"
  },
